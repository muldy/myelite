{{#if docs.length}}
<table class="table table-hover" id ="active_missions">
    <thead>
        <tr>
            <th scope="col">MissionID</th>
            <th scope="col">Name</th>
            <th scope="col">Faction (Rep) - (Infl)</th>
            <th scope="col">Target Faction</th>
            <th scope="col">Destination System(Station)</th>
            <th scope="col">Reward</th>
            <th scope="col">Expiration</th>
        </tr>
    </thead>
    <tbody>
        {{#each content}}
        <tr class="table-active" id="mission{{{MissionID}}}">
            <th scope="row">
                <a href="#{{{MissionID}}}">{{{event}}}</a>
            </th>
            <td>
                <ul class="list-group">
                    <li class="list-group-item">{{{LocalisedName}}}</li>
                    {{#if PassengerCount}}
                    <li class="list-group-item">
                        <strong>{{{PassengerCount}}}</strong>&nbsp;{{/if}} {{#if PassengerVIPs}}
                        <strong>VIP</strong>&nbsp;{{/if}} {{#if Tourist}}</strong>Tourist</strong>&nbsp;{{/if}} {{#if PassengerType}}</strong>{{{PassengerType}}}</strong>&nbsp;{{/if}}
                        {{#if PassengerWanted}}
                        <strong>WANTED</strong>&nbsp;{{/if}} {{#if PassengerCount}}
                    </li>
                    {{else}} {{#if Count}}
                    <li class="list-group-item">
                        <strong>{{{Count}}}</strong>&nbsp;{{/if}} {{#if PassengerVIPs}}
                        <strong>VIP</strong>&nbsp;{{/if}} {{#if Tourist}}</strong>Tourist</strong>&nbsp;{{/if}} {{#if PassengerType}}</strong>{{{PassengerType}}}</strong>&nbsp;{{/if}}
                        {{#if PassengerWanted}}
                        <strong>WANTED</strong>&nbsp;{{/if}} {{#if Count}}
                    </li>
                    {{/if}} 
                    {{/if}}
                    {{#if Commodity}}
                    <li class="list-group-item">
                        Commodity Reward: <strong>{{{Commodity_Localised}}}</strong>&nbsp;
                    </li>
                    {{/if}}
                </ul>
            </td>
            <td>{{{Faction}}} ({{{Reputation}}}) - ({{{Influence}}})</td>
            <td>{{{TargetFaction}}}</td>
            <td>{{#if OldDestinationStation}}
                <s>{{{OldDestinationSystem}}} ({{{OldDestinationStation}}})</s>
                {{{DestinationSystem}}} ({{{DestinationStation}}}) {{else}} {{{DestinationSystem}}} ({{{DestinationStation}}}) {{/if}}
            </td>
            <td>{{{Reward}}}</td>
            <td>{{{Expiry}}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>
<pre>
    {{{docs}}}
</pre>
{{else}}
<div class="card border-info mb-3" style="max-width: 20rem;">
  <div class="card-header">No missions</div>
  <div class="card-body">
    <h4 class="card-title">You lazy bum!</h4>
    <p class="card-text">Go do something usefull for the community!</p>
  </div>
</div>
{{/if}}